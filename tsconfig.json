{
  "compilerOptions": {
    "lib": [
      "es2019"
    ],
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop" : true
  },
  "exclude": [
    "node_modules"
  ]
}
